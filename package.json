{
  "name": "hog",
  "displayName": "Hog",
  "description": "Language support to Hog list files (https://cern.ch/hog)",
  "publisher": "DavideCieri",
  "repository": {
    "type": "git",
    "url": "https://github.com/Hog-CERN/HogVSCode"
  },
  "version": "0.4.0",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "author": {
    "email": "davide.cieri89@gmail.com",
    "name": "Davide Cieri"
  },
  "keywords": [
    "syntax"
  ],
  "homepage": "https://cern.ch/hog",
  "icon": "hog.png",
  "contributes": {
    "views": {
      "package-explorer": [
        {
          "id": "package-dependencies",
          "name": "Dependencies"
        },
        {
          "id": "package-outline",
          "name": "Outline"
        }
      ]
    },
    "commands": [
      {
        "command": "hog.createproject",
        "title": "Hog: Create Project"
      },
      {
        "command": "hog.openproject",
        "title": "Hog: Open Vivado Project"
      }
    ],
    "languages": [
      {
        "id": "hog",
        "aliases": [
          "Hog",
          "hog"
        ],
        "extensions": [
          ".src",
          ".sim",
          ".con",
          ".lst",
          ".ext"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hog",
        "scopeName": "source.hog",
        "path": "./syntaxes/hog.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/test-electron": "^2.2.3",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  }
}
